<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
   <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th>サイトウリョウタ</th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th></th>
  </tr>
</tbody>
</div>

<h2>New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>error error prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
  <% end %>

  <h2>Books</h2>
<% @books.each do |book| %>
<div>
  <%= attachment_image_tag book.user, :profile_image %>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
</div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
   <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
   </div>

   <div class="field">
    <label for="book_body">Opinion</label>
   <%= f.text_area :body %>
   </div>

   <div class="actions">
   <%= f.submit 'Create Book' %>
   </div>
   <% end %>